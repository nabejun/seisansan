<% now = Time.zone.now %>
<script>

$(function() {
  $.datepicker.setDefaults($.datepicker.regional["ja"]);
  $("#koutsuhi_seisan_date").datepicker();
});

</script>
<div class="page-header">
    <h1>作成</h1>
</div>

<%= form_for(@koutsuhi, class: 'form-horizontal', role: 'form') do |f| %>
    <% if @koutsuhi.errors.any? %>
        <div class="alert alert-danger">
            <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: 'form-control', :readonly=>true %>
    </div>
    <div class="form-group">
        <%= f.label :seisan_date %>
        <%= f.text_field :seisan_date %>
    </div>

    <div class="form-group">
        <%= f.label :route_from %>
        <%= f.text_field :route_from, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :route_to %>
        <%= f.text_field :route_to, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
    </div>

    <%= f.submit '登録', class: 'btn btn-default', date: {disable_with: '作成中・・・'} %>
<% end %> 
